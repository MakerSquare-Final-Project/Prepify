<% content_for(:body_id, "registrations_new") %> 


<div class="row" id="top">

  <div class="large-6 columns">
    <%= image_tag("Prepify_logo.png", :class => "logo")%>
    <br>
    <br>
    <p>"Free Interactive SAT Prep"</p>
  </div>

  <div class="large-4 large-offset-2 columns">
    <h2>Sign up</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :name %><br />
      <%= f.text_field :name, :autofocus => true, class: "glowing-border" %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, class: "glowing-border" %></div>

      <div><%= f.label :password %><br />
      <%= f.password_field :password, class: "glowing-border" %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "glowing-border" %></div>

      <div class="signup"><%= f.submit "Sign up", class: "button radius" %></div>
    <% end %>
    <%#= render "devise/shared/links" %>
  </div>
</div>

<div class="row bottom">
  <div class="large-4 columns">
    <p>Serious SAT test prep for all, open to anyone with the will to learn</p>
  </div>

  <div class="large-4 columns">
    <p>An interactive curriculum that teaches the zen of standardized testing</p>
  </div>
  <div class="large-4 columns">
    <p>Tests that adapt their difficulty to continually challenge and push your abilities</p>
  </div>
</div>