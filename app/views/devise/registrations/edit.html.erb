<% content_for(:body_id, "blog") %> 
<% content_for(:title, "#{current_user.name}")%>


<div class="row">
  <div class="large-12 columns">
    <h2 id="center-title">Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class:'edit-form', :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true, class:'devise-form' %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true, class:'devise-form' %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, :autocomplete => "off", class:'devise-form' %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class:'devise-form' %></div>

  <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, class:'devise-form' %></div>

  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class:'tiny button', :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back, class:'tiny button' %>
