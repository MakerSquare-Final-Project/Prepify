<tr data-subject-id='<%= subject.id %>'>
  <td>
    <%= subject.name %> 
    <% if subject.pages.count > 0 %>
      <%= link_to '<i class="fa fa-eye link-padding"> Preview</i>'.html_safe, user_subject_path(@user, subject), title:'Preview Lesson' %>
    <%end%>
</td>
  <td><%= link_to '<i class="fa fa-wrench"></i>'.html_safe, admin_subject_pages_path(subject), title:"Edit Lesson" %></td> 
 
  <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, admin_subject_path(subject), confirm: "Are you sure?", method: :delete, remote: true, title:"Delete Lesson"  %></td>
  <td>
    <% if subject.published == false %>
      <%= render partial: 'publish', locals: {subject: subject} %>
    <% else %>
      <%= render partial: 'unpublish', locals: {subject: subject} %>
    <% end %>
  </td>
</tr>

