<% content_for(:body_id, "admin_pages") %> 
<div class="row">
  <div class="columns large-12">
     <h2>Current Subjects</h2>
     <a href="<%= new_admin_subject_path %>" class="small button">Create A New Subject</a>
    <br>

<div class="row">
  <div class="large-7 large-5 columns">
    <div class="panel">
      <h3>Math</h3>
      <table width="100%">
        <thead>
        </thead>
  
          <tbody>

            <% @subjects.each do |subject| %>
              
              <tr>
              <% if subject.section == "Math" %>
                <td><%= link_to "#{subject.name} (#{subject.pages.count} pages)", admin_subject_pages_path(subject) %></td>
                <td><%= link_to 'Edit Subject Information', edit_admin_subject_path(subject) %></td>
                <td><%= link_to 'Delete', admin_subject_path(subject), method: :delete %></td>
              </tr>
            <% end %>
            <%end%>
          </tbody>
        </table> 
      </div> 

    <div class="panel">
      <h3>Critical Reading</h3>
      <table width="100%">
        <thead>
          <tr> 
            
          </tr>
        </thead>
      
        <tbody>

          <% @subjects.each do |subject| %>
            
            <tr>
            <% if subject.section == "Critical Reading" %>
              <td><%= link_to "#{subject.name} (#{subject.pages.count} pages)", admin_subject_pages_path(subject) %></td>
              <td><%= link_to 'Edit Subject Information', edit_admin_subject_path(subject) %></td>
              <td><%= link_to 'Delete', admin_subject_path(subject), method: :delete %></td>
            </tr>
          <% end %>
          <%end%>
        </tbody>
      </table>
    </div> 

    <div class="panel">
      <h3>Writing</h3>
      <table width="100%">
        <thead>
          <tr>
         
          </tr>
        </thead>
      
        <tbody>

          <% @subjects.each do |subject| %>
            
            <tr>
            <% if subject.section == "Writing" %>
              <td><%= link_to "#{subject.name} (#{subject.pages.count} pages)", admin_subject_pages_path(subject) %></td>
              <td><%= link_to 'Edit Subject Information', edit_admin_subject_path(subject) %></td>
              <td><%= link_to 'Delete', admin_subject_path(subject), method: :delete %></td>
            </tr>
          <% end %>
          <%end%>
        </tbody>
      </table>
    </div> 
  </div>

  <div class= "large-5 columns">
    <div class= "panel">
      <table id="user_table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin?</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? %></td>
          <td><%= current_user.id %></td>
          <td><%= render 'admin/users/form' %>
        <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

  