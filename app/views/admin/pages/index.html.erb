<h1>Lesson pages for <%= @subject.name %></h1>

<table width="100%" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th>Sequence</th>
      <th>Page Type</th>
      <th>Content</th>
      
    </tr>
  </thead>

  <tbody>
   
    <% @subject.page_order.each do |page| %>
      <tr>
        <td><%= page.sequence_id %></td>
        <td><%= page.pageable_type %></td>
        <td><%= page.body_snippet %></td>  
        <td><%= link_to "Show Page" , admin_subject_page_path(@subject, page) %></td>
        <td><%= link_to "Update Page Sequence", edit_admin_subject_page_path(@subject, page) %></td>
        <td><%= link_to 'Destroy', admin_subject_page_path(@subject, page), method: :delete %></td>
        

      


      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New Question Page", new_admin_subject_question_path%> 

<%= link_to "New Instruction Page", new_admin_subject_instruction_path
%> 

