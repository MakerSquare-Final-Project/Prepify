      </ul>
      
       	<h3><%= @question.body %></h3
					<p>Choose the Correct Answer:</p>
						<div class="field">
    					<div class="choices">
								<% @question.choices.each do |choice| %>
						    	<div class="choice" >
							    	<%= radio_button :question, :choices, choice %>
							    	<%= choice %><br>
		    					</div>		       	
    						<%end%>
    							<div class="submit">
										<button type="button">Check Answer</button> 
									</div>
    					</div>      
  					</div>
  					<br> 
  					<div class="show" visibility: hidden>
							<h3><%= link_to "Next Page", next_page(@user, @question.page)%></h3><br>
						</div>
					
			
  					<!-- Content here -->

					<div class="panel callout" visibility: hidden >
							<h2></h2>
						<%= progress_bar(progress(@user, @question.page))%>
				</div>
				
					  
			</div>  
  </div>
    
  
  <!-- Footer -->
  
