<h1><%= @question.body %><br></h1>
<p>Choose the Correct Answer:</p>
<div class="field">
    <div class="choices">
			<% @question.choices.each do |choice| %>
	    	<div class="choice" >
		    	<%= radio_button :question, :choices, choice %>
		    	<%= choice %><br>
		    </div>    	
    	<%end%>   	
    </div>      
  </div> 
</div>
<div class="show">
	

<% content_for :javascript do %>
<script type="text/javascript">
	$('.choice').on("click", function(e){
		check_answer(@question)
		$('.show').append
	});

</script>



