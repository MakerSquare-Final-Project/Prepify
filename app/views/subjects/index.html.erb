
<% content_for(:body_id, "subject")%> 


  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.2/css/font-awesome.css" rel="stylesheet">


<div class="panel">
  <div class="row">
    <div class="large-4 small-3 centered columns ">      
        <h1 class="bottom-nav ">All Courses</h1>
    </div>
  </div>
</div>

  <div class="row">         
    <div class="large-4 small-6 columns centered ">
      
      <div class="panel">        
        <h3><%= Subject.find(1).section %></h3>
        <h6 class="math-subheader">See Courses</h6>
        <div class="math-slider" visibility: hidden>
          <% @math_subjects.each do |subject| %>
          <p><%= link_to "#{subject.name}", user_subject_path(current_user, subject.id)%></p>
          <% end %> 
        </div>
      </div>
    </div>
    
    <div class="large-4 small-6 columns centered">
      
      <div class="panel">
        <h3><%= Subject.find(2).section%></h3>

        <h6 class="reading-subheader">See Courses</h6>
        <div class="reading-slider" visibility: hidden>
          <% @read_subjects.each do |subject| %>
          <p><%= link_to "#{subject.name}", user_subject_path(current_user, subject.id) %></p>
          <% end %> 
        </div>
      </div>
    </div>
              
    <div class="large-4 small-6 columns centered">
      
     
      <div class="panel">
        <h3><%= Subject.find(3).section%></h3>
        <h6 class="writing-subheader">See Courses</h6>
        <div class="writing-slider" visibility: hidden>
          <% @write_subjects.each do |subject| %>
          <p><%= link_to "#{subject.name}", user_subject_path(current_user, subject.id) %></p>
          <% end %> 
        </div>
      </div>
    </div>           
  </div>


  <!-- End Thumbnails -->

<script type="text/javascript"> 
 $('.writing-subheader').mouseover(function(e){
    $('.writing-slider').toggle("slide");
  }); 
 
  $('.reading-subheader').mouseover(function(e){
    $('.reading-slider').toggle("slide");
  });


  $('.math-subheader').mouseover(function(e){
    $('.math-slider').toggle("slide");
  });
</script>






  



